{
  "name": "Run/Save/Cancel",
  "version": "1.0",
  "description": "Allows the user to choose whether to Run, Save or Cancel a download!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "permissions": ["downloads", "downloads.shelf", "tabs"],
  "icons": {
    "16": "images/download96.png",
    "32": "images/download96.png",
    "48": "images/download96.png",
    "128": "images/download96.png"
  },
  "manifest_version": 2
}