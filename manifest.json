{
  "name": "Run/Save/Cancel",
  "version": "1.0",
  "description": "Allows the user to choose whether to Run, Save or Cancel a download!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "permissions": ["downloads", "downloads.shelf", "tabs"],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
