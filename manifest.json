{
  "name": "save | saveas | cancel",
  "version": "1.0",
  "description": "a chrome extension which allows the user to choose whether to save | save as | cancel any download",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "permissions": ["tabs", "downloads", "downloads.shelf"],
  "icons": {
    "16": "images/download96.png",
    "32": "images/download96.png",
    "48": "images/download96.png",
    "128": "images/download96.png"
  },
  "manifest_version": 2
}